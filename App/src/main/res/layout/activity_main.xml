<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/face_check"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="人脸识别"
        />
    <Button
        android:id="@+id/scan_code"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="扫码器"
        />
    <Button
        android:id="@+id/key_bord"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="数字键盘"
        />
    <Button
        android:id="@+id/read_card"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="读卡"
        />
    <Button
        android:id="@+id/read_idCard"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="读取身份证／人脸对比"
        />
    <Button
        android:id="@+id/read_tem"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="温度"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bottom_scan_code"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="底座扫码"
        />





    <EditText
        android:visibility="gone"
        android:id="@+id/key_test"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/surface_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/face_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>